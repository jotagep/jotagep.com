---
import { Image } from 'astro:assets'

import Pulse from '@/components/shared/Pulse.astro'
import Tooltip from '@/components/shared/Tooltip/Tooltip.astro'

import type { Job } from '@/data/jobs'
import { COLOR_BY_STATUS, TEXT_BY_STATUS } from '@/data/jobs'

type Props = {
  job: Job
}

const { job } = Astro.props
---

<a
  class="flex items-center flex-1 gap-4 p-6 card"
  href={job.url}
  target="_blank"
  rel="noopener noreferrer"
>
  <div class="flex flex-1 items-center h-full">
    <Image
      class="w-14 h-14 mr-4 rounded-full"
      src={job.logo}
      alt={job.company}
    />
    <div>
      <h3 class="text-xl font-semibold">
        {job.company}
      </h3>
      <p class="text-sm">
        {job.title}
      </p>
    </div>
  </div>
  <div class="flex justify-center w-4">
    <Tooltip content={TEXT_BY_STATUS[job.status]}>
      <Pulse color={COLOR_BY_STATUS[job.status]} />
    </Tooltip>
  </div>
</a>
