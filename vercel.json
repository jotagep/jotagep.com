{
  "rewrites": [
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "blog.jotagep.com"
        }
      ],
      "destination": "/blog"
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "blog.jotagep.com"
        }
      ],
      "destination": "/blog/:path*"
    },
    {
      "source": "/:locale/",
      "has": [
        {
          "type": "host",
          "value": "blog.jotagep.com"
        }
      ],
      "destination": "/:locale/blog"
    },
    {
      "source": "/:locale/:path*",
      "has": [
        {
          "type": "host",
          "value": "blog.jotagep.com"
        }
      ],
      "destination": "/:locale/blog/:path*"
    }
  ]
}
