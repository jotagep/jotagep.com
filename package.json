{
  "name": "jotagep-site",
  "type": "module",
  "version": "0.0.1",
  "description": "Jotagep's personal website",
  "license": "MIT",
  "scripts": {
    "astro": "astro",
    "build": "npm run care && astro build",
    "build:only": "astro build --dev",
    "care": "astro check && tsc --noEmit && npm run pretty",
    "dev": "astro dev",
    "format": "prettier --write  \"**/*.{js,jsx,ts,tsx,md,mdx,astro}\"",
    "lint": "eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "pretty": "npm run format && npm run lint",
    "preview": "astro preview",
    "start": "astro dev",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.3",
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.4.2",
    "@astrojs/tailwind": "^6.0.2",
    "@fontsource/lato": "^5.2.6",
    "@fontsource/open-sans": "^5.2.6",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "astro": "^5.12.9",
    "astro-seo": "^0.8.4",
    "gray-matter": "^4.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.0.24",
    "tippy.js": "^6.3.7",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.3.0",
    "autoprefixer": "^10.4.15",
    "cssnano": "^6.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^1.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "iso-639-1": "^3.1.2",
    "lint-staged": "^15.3.0",
    "locale-emoji": "^0.3.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "uniqid": "5.4.0"
  }
}
