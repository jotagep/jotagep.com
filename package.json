{
  "name": "jotagep-site",
  "type": "module",
  "version": "0.0.1",
  "description": "Jotagep's personal website",
  "license": "MIT",
  "scripts": {
    "astro": "astro",
    "build": "npm run generate && npm run care && astro build",
    "build:only": "npm run generate && astro build --dev",
    "care": "astro check && tsc --noEmit && npm run pretty",
    "dev": "astro dev",
    "format": "prettier --write  \"**/*.{js,jsx,ts,tsx,md,mdx,astro}\"",
    "generate": "astro-i18next generate",
    "lint": "eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "pretty": "npm run format && npm run lint",
    "preview": "astro preview",
    "start": "astro dev"
  },
  "dependencies": {
    "@astrojs/check": "^0.2.0",
    "@astrojs/mdx": "^1.0.0",
    "@astrojs/react": "^3.0.0",
    "@astrojs/sitemap": "^1.3.1",
    "@astrojs/tailwind": "^5.0.0",
    "@astrojs/ts-plugin": "^1.1.3",
    "@fontsource/lato": "^5.0.8",
    "@fontsource/open-sans": "^5.0.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "astro": "^3.0.2",
    "astro-i18next": "^1.0.0-beta.21",
    "astro-seo": "0.7.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.3.2",
    "tippy.js": "^6.3.7",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.3.0",
    "autoprefixer": "^10.4.15",
    "cssnano": "^6.0.1",
    "eslint": "8.41.0",
    "eslint-plugin-astro": "^0.27.1",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.9.0",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "uniqid": "5.4.0"
  }
}
